//This function takes two parameters, first the base number and second the exponent number and returns the result. Eg. base = 2, exponent = 5, result = 32

int power(int base,int exponent){
    int result = 1;

    if (exponent == 0){
        result = 1;
    }

    else if (exponent == 1){
        result = base;
    }
    else{
        for (int i = 0; i < exponent; i++){
                result = result*base;

        }
    }
    return result;
}

int main(){

int result = power(2,5);
printf("%d",result);
return 0 ;
}

